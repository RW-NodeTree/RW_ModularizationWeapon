		<description>Underbarrel shotgun designed for door breaching or human breaching.</description>
		<graphicData>
			<texPath>Things/WeaponPart/Gun/AssaultRifle/Item_Masterkey</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<uiIconPath>ui/icons/AttachmentIcon/AttachmentIcon_Underbarrel</uiIconPath>
		<statBases>
			<Mass>0.5</Mass>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Shotgun</defaultProjectile>
				<warmupTime>0.9</warmupTime>
				<range>9.9</range>
				<soundCast>Shot_Shotgun</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="RW_ModularizationWeapon.CompProperties_ModularizationWeapon">
				<verbPropertiesOtherPartOffseterAffectHorizon>0</verbPropertiesOtherPartOffseterAffectHorizon>
				<verbPropertiesOtherPartMultiplierAffectHorizon>0</verbPropertiesOtherPartMultiplierAffectHorizon>
				<statOtherPartOffseterAffectHorizon>0</statOtherPartOffseterAffectHorizon>
				<statOtherPartMultiplierAffectHorizon>0</statOtherPartMultiplierAffectHorizon>
				<PartTexPath>Things/WeaponPart/Gun/AssaultRifle/Masterkey</PartTexPath>
			</li>
		</comps>
	</ThingDef>
</Defs>