    </PropertyGroup>
    <Error Condition="!Exists('../../packages/docfx.console.2.59.4/build/docfx.console.targets')" Text="$([System.String]::Format('$(ErrorText)', '../../packages/docfx.console.2.59.4/build/docfx.console.targets'))" />
